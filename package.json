{
  "name": "zaphycms-monorepo",
  "description": "The Headless - Git Based Content Management System",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prebootstrap": "npm run build",
    "build": "lerna run build --parallel --scope zaphycms-*",
    "clean": "lerna clean --yes",
    "dev": "DOTENV_PATH=$PWD nodemon --exec 'npm run bootstrap && lerna run dev --scope zaphycms --stream'",
    "lint": "eslint . --ignore-path .gitignore",
    "start": "DOTENV_PATH=$PWD lerna run start --scope zaphycms --stream",
    "prestart": "npm run build",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zaphylabs/zaphycms.git"
  },
  "keywords": [
    "zaphycms",
    "cms",
    "git based cms",
    "content management system"
  ],
  "author": {
    "name": "Zaphy",
    "email": "team@zaphy.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zaphylabs/zaphycms/issues"
  },
  "homepage": "https://github.com/zaphylabs/zaphycms#readme",
  "engines": {
    "node": ">=12.14.1",
    "npm": ">=6.13.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.0.0",
    "lerna": "^3.22.1"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6"
  }
}
